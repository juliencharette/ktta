{
  "name": "juliencharette/ktta",
  "description": "Kirby + Twig + TailwindCSS + AlpineJS",
  "type": "project",
  "keywords": [
    "kirby",
    "twig",
    "tailwindcss",
    "alpinejs",
    "cms",
    "boilerplate"
  ],
  "authors": [
    {
      "name": "Julien Charette",
      "email": "hello@juliencharette.com"
    }
  ],
  "require": {
    "php": ">=7.4.0 <8.2.0",
    "getkirby/cms": "^3.6",
    "amteich/kirby-twig": "^4.1",
    "arnoson/kirby-vite": "^3.0"
  },
  "config": {
    "allow-plugins": {
      "getkirby/composer-installer": true
    },
    "optimize-autoloader": true
  },
  "scripts": {
    "start": [
      "Composer\\Config::disableProcessTimeout",
      "@php -S localhost:8000 kirby/router.php"
    ]
  }
}
